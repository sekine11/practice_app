<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin text-center align-center container'}) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>
	  
	  <h1 class="h3 mb-4 font-weight-bold">ログイン</h1>
    
    <%= f.label :email, "Email Address", class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-4", id: "inputEmail", placeholder: "Email address" %>

    <%= f.label :password, "Password", class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-2", id: "inputPassword", placeholder: "Password" %>
    
    <div class="checkbox mb-3 mt-3">
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
    </div>
  
    <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
